{
  "name": "hermesx",
  "version": "0.3.1",
  "description": "Run TypeScript files with Hermes JS engine",
  "author": "Daniel Suchy",
  "homepage": "https://github.com/Nodonisko/hermesx",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nodonisko/hermesx.git"
  },
  "keywords": [
    "typescript",
    "hermes",
    "cli",
    "bundler"
  ],
  "bin": {
    "hermesx": "./bin/hermesx.js"
  },
  "main": "lib/cli.js",
  "type": "module",
  "files": [
    "bin/",
    "lib/",
    "hermes-globals.js",
    "babel.config.cjs"
  ],
  "scripts": {
    "build": "bun run tsc",
    "test": "bun run build && bun test/test-runner.ts",
    "prepublishOnly": "bun run build",
    "dev": "bun run --watch src/cli.ts"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "@react-native/babel-preset": "^0.81.1",
    "@rspack/core": "^1.5.6",
    "@types/tar": "^6.1.11",
    "babel-loader": "^10.0.0",
    "commander": "^14.0.1",
    "node-fetch": "^3.3.2",
    "tar": "^7.5.1",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.5.2",
    "@types/ramda": "^0.31.1",
    "date-fns": "^4.1.0",
    "lodash": "^4.17.21",
    "ramda": "^0.31.3",
    "superstruct": "^2.0.2",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "license": "MIT"
}
