{
  "name": "hermesx",
  "version": "0.2.0",
  "description": "Run TypeScript files with Hermes JS engine",
  "author": "Daniel Suchy",
  "homepage": "https://github.com/Nodonisko/hermesx",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nodonisko/hermesx.git"
  },
  "keywords": [
    "typescript",
    "hermes",
    "cli",
    "bundler"
  ],
  "bin": {
    "hermesx": "./bin/hermesx.js"
  },
  "main": "lib/cli.js",
  "type": "module",
  "files": [
    "bin/",
    "lib/",
    "hermes-globals.js"
  ],
  "scripts": {
    "build": "bun run tsc",
    "test": "bun run build && bun test/test-runner.ts",
    "prepublishOnly": "bun run build",
    "dev": "bun run --watch src/cli.ts"
  },
  "dependencies": {
    "@react-native/metro-babel-transformer": "^0.81.1",
    "@react-native/metro-config": "^0.81.1",
    "@types/tar": "^6.1.11",
    "commander": "^14.0.1",
    "metro": "^0.83.2",
    "metro-config": "^0.83.2",
    "node-fetch": "^3.3.2",
    "react-native-monorepo-config": "^0.1.10",
    "tar": "^7.5.1",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.5.2",
    "lodash": "^4.17.21"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "license": "MIT"
}
